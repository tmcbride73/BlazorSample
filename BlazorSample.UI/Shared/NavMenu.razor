<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">User Management</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="users">
                <span class="oi oi-list" aria-hidden="true"></span> Current Users
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="users/create">
                <span class="oi oi-plus" aria-hidden="true"></span> Add a New User
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="users/workflow">
                <span class="oi oi-action-redo" aria-hidden="true"></span> User Workflow
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="test">
                <span class="oi oi-script" aria-hidden="true"></span> Test Page
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="testupload">
                <span class="oi oi-script" aria-hidden="true"></span> Test Upload Page
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
